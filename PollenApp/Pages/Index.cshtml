@page
@model IndexModel
@{
    ViewData["Title"] = "Pollen Forecast";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Pollen"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">

</head>
<body>
    <h1>Pollen Forecast in Sundsvall</h1>
    <div id="pollen-levels"></div>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            fetchPollenLevels();
        });

        async function fetchPollenLevels() {
            try {
                const response = await fetch("https://api.pollenrapporten.se/v1/forecasts?region_id=2a2a2a2a-2a2a-4a2a-aa2a-2a2a303a3137&current=true");
                if (!response.ok) {
                    throw new Error(`HTTP error! Status: ${response.status}`);
                }
                const data = await response.json();
                displayPollenLevels(data.items);
            } catch (error) {
                console.error("Error fetching pollen forecasts:", error);
            }
        }

        function getPollenIcon(level) {
            if (level === 0) return "/images/none.png";
            if (level === 1) return "images/very-low-png";
            if (level === 2) return "/images/low.png";
            if (level === 3 || level === 4) return "/images/medium.png";
            if (level === 5 || level === 6) return "/images/high.png";
            if (level === 7) return "/images/very-high.png";
            return "/images/unknown.png";
        }

                function displayPollenLevels(forecasts) {
            const container = document.getElementById("pollen-levels");

            if (!forecasts || forecasts.length === 0) {
                container.innerHTML = "<p>Ingen pollenprognos tillgänglig för Sundsvall.</p>";
                return;
            }

            container.innerHTML = forecasts.map(forecast => `
                <div>
                    <h3>Pollenprognos</h3>
                    <p><strong>Startdatum:</strong> ${forecast.startDate ?? "Okänt"}</p>
                    <p><strong>Slutdatum:</strong> ${forecast.endDate ?? "Okänt"}</p>
                    <p><strong>Beskrivning:</strong> ${forecast.text ?? "Ingen beskrivning tillgänglig."}</p>

                    ${forecast.levelSeries && forecast.levelSeries.length > 0
                        ? forecast.levelSeries.map(level => `
                            <p><strong>Nivå den ${level.time ?? "Okänd"}:</strong> ${level.level ?? "Okänt"}</p>
                        `).join('')
                        : '<p><strong>Pollenmängd:</strong> Ingen data tillgänglig.</p>'
                    }
                </div>
            `).join("");
        }
    </script>
</body>
</html>